
    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.fearnot.snapp.Fragments.goalInformationFragment">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <ImageView
            android:id="@+id/iconImage"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-8dp"
            android:src="@drawable/pineapple" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/goal_title"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentWeightLabel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/weight_text_metric"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <EditText
                android:id="@+id/weightInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:id="@+id/metricHeightLayout">

            <TextView
                android:id="@+id/currentHeightLabel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/height_text_metric"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <EditText
                android:id="@+id/heightInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/imperialHeightLayout"
            android:visibility="gone">

            <TextView
                android:text="@string/height_text_imperial"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView20"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/heightFeetImperialEditText"
                android:layout_weight=".55"
                android:hint="feet" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/heightInchesImperialEditText"
                android:layout_weight=".55"
                android:hint="inches" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goalWeightLabel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/goalWeight_text_metric"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <EditText
                android:id="@+id/goalWeightInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="@string/activityLevel_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notSureLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/activityLevelInfoButton"
            android:textColor="#52b7bd"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:entries="@array/activityLevel_array"
            android:prompt="@string/spinner_title" />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#52b7bd"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/startReachingText"
            android:textColor="#ffffff" />
    </LinearLayout>