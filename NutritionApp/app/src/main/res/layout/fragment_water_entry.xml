<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nutrition.nutritionapp.waterEntryFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="@string/water_entry_title"
            android:textAlignment="center"
            android:textSize="25sp" />

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="182dp"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:textAlignment="center"-->
                <!--app:srcCompat="@drawable/water_bottle"-->
                <!--android:layout_weight="1" />-->

            <com.example.nutrition.nutritionapp.WaveView
                android:id="@+id/wave"
                android:layout_marginLeft="32dp"
                android:layout_centerHorizontal="true"
                android:layout_width="300dp"
                android:layout_height="200dp"
                />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amountWaterDrankLabel"
                android:layout_weight="1" />

            <com.example.nutrition.nutritionapp.libs.WaveView
                android:id="@+id/wave"
                android:layout_width="90dp"
                android:layout_height="182dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="182dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                app:srcCompat="@drawable/water_bottle"
                android:alpha="0.5" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:text="@string/water_entry_info"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/cupImageView"
            android:layout_width="300dp"
            android:layout_height="86dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            app:srcCompat="@drawable/water_glass" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:id="@+id/waterInput" />

            <Button
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:text="@string/log_water_button"
                android:textColor="@color/white"
                android:id="@+id/logWaterButton" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
